extends layout

block content
  if posts
    each post, i in posts
      .post
        h1
          a(href='/posts/show/#{post._id}')
            =post.title
        p.meta Posted in 
          a(href='/categories/show/#{post.category}') #{post.category}
          | &nbsp;by #{post.author} on #{moment(post.date).format("MM-DD-YYYY")}
        br
        img(src="/images/#{post.mainimage}" class="main-image")
        br
        !=truncateText(post.body, 400)
        a.more(href='/posts/show/#{post._id}') Read More
